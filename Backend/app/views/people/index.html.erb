<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Code person</th>
      <th>Name person</th>
      <th>Age person</th>
      <th>Address person</th>
      <th>Code gender</th>
      <th>Code city</th>
      <th>Code school</th>
      <th>Code type</th>
      <th>Password person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.code_person %></td>
        <td><%= person.name_person %></td>
        <td><%= person.age_person %></td>
        <td><%= person.address_person %></td>
        <td><%= person.code_gender %></td>
        <td><%= person.code_city %></td>
        <td><%= person.code_school %></td>
        <td><%= person.code_type %></td>
        <td><%= person.password_person %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

