<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<table>
  <thead>
    <tr>
      <th>Code school</th>
      <th>Name school</th>
      <th>Address school</th>
      <th>Phone school</th>
      <th>Email school</th>
      <th>Code city</th>
      <th>Code type</th>
      <th>Password school</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.code_school %></td>
        <td><%= school.name_school %></td>
        <td><%= school.address_school %></td>
        <td><%= school.phone_school %></td>
        <td><%= school.email_school %></td>
        <td><%= school.code_city %></td>
        <td><%= school.code_type %></td>
        <td><%= school.password_school %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

